/*Faça um programa que leia e valide as seguintes informações:
Nome: maior que 3 caracteres;
Idade: entre 0 e 150;
Salário: maior que zero;
Sexo: 'f' ou 'm';
Estado Civil: 's', 'c', 'v', 'd';*/
import java.util.Scanner;
public class Main {
  public static void main(String[] args) {
    Scanner teclado = new Scanner( System.in );
    char nome, sexo, estadoCivil;
    int idade, salario;
    
    System.out.println("Digite seu nome: ");
    nome = teclado.next().charAt(0);
    

    System.out.println("Digite sua idade: ");
    idade = teclado.nextInt(); 

    System.out.println("Digite seu salario: ");
    salario = teclado.nextInt(); 

    System.out.println("Digite seu sexo: ");
    sexo = teclado.next().charAt(0);

    System.out.println("Digite seu estado civil: ");
    estadoCivil = teclado.next().charAt(0);

    if (nome > 3);

    System.out.println("Nome válido" );

    if (idade > 0 && idade < 150);
    System.out.println("idade válido" );

    if (salario > 0);
    System.out.println("salario válido" );

    if (sexo == 'f' || sexo == 'm');
    System.out.println("sexo válido" );

    if (estadoCivil == 's' || estadoCivil == 'c' || estadoCivil == 'v' || estadoCivil == 'd'); 
    System.out.println("estado civil válido" );

   

    
  }   
}
  
